generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Note {
  id                 String   @id @default(cuid())
  title              String?
  content            String
  expirationType     String
  expiration         String?
  passwordProtected  Boolean  @default(false)
  password           String?
  created            DateTime @default(now())
  updated            DateTime @updatedAt
}

